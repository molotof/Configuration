##################
### Multimedia ###
##################
"mpc toggle"
    XF86AudioPlay

"urxvt -e ncmpcpp"
    Shift + XF86AudioPlay

"mpc stop"
    XF86AudioStop

"mpc prev"
    XF86AudioPrev

"mpc next"
    XF86AudioNext

"mpc seek -00:00:10"
    Shift + XF86AudioPrev

"mpc seek +00:00:10"
    Shift + XF86AudioNext

"mpc-trash"
    Mod4 + Delete

"mpc-addto Favorites"
    Mod4 + Insert

"ssh iandrio mpc toggle"
    Mod1 + XF86AudioPlay

"urxvt -e ssh -tC iandrio ncmpcpp"
    Shift+Mod1 + XF86AudioPlay

"ssh iandrio mpc stop"
    Mod1 + XF86AudioStop

"ssh iandrio mpc prev"
    Mod1 + XF86AudioPrev

"ssh iandrio mpc next"
    Mod1 + XF86AudioNext

"ssh iandrio mpc seek -00:00:10"
    Shift+Mod1 + XF86AudioPrev

"ssh iandrio mpc seek +00:00:10"
    Shift+Mod1 + XF86AudioNext

"ssh iandrio ~/bin/mpc-trash"
    Mod1+Mod4 + Delete

"ssh iandrio ~/bin/mpc-addto Favorites"
    Mod1+Mod4 + Insert

